{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./public/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
} 